-- ESP
local espEnabled = false
local espBtn = Instance.new("TextButton", content)
espBtn.Size = UDim2.new(1, 0, 0, 35)
espBtn.Position = UDim2.new(0, 0, 0, 55)
espBtn.Text = "ðŸ§¿ ESP"
